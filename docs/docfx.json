{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "articles/**"
        ]
      },
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "src": "articles",
        "dest": "docs",
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_appName": "The Clean Arch",
      "_appTitle": "The Clean Arch Project",
      "_enableSearch": true,
      "pdf": true,
      "_lang": "pt-br",
      "_appLogoPath": "images/CleanArchIcon.svg",
      "_appFaviconPath": "images/CleanArchIcon.png",
      "_appFooter": "<span>Apoiado por <a href=\"https://hibex.co\">Hibex Solutions</a>. Feito com <a href=\"https://dotnet.github.io/docfx\">docfx</a></span>",
      "sitemap": {
        "baseUrl": "https://hibex-solutions.github.io/TheCleanArch",
        "priority": 0.5,
        "changefreq": "daily"
      },
      "_disableContribution": true
    }
  }
}